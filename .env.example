# Environment template - copy to .env and configure
DATABASE_URL="postgresql://username:password@localhost:5432/hrms_db?schema=public"
REDIS_HOST=localhost
REDIS_PORT=6379

# Application URLs (Required for cookie auto-detection)
APP_URL=https://your-backend.onrender.com
CORS_ORIGIN=https://your-frontend.vercel.app

# Cookie Configuration (Auto-detected if not set)
# COOKIE_SAME_SITE=none    # Options: none | lax | strict (auto-detected based on CORS_ORIGIN vs APP_URL)
# COOKIE_SECURE=true       # Options: true | false (auto: true in production, false locally)
# COOKIE_DOMAIN=           # Optional: .example.com for subdomain sharing
COOKIE_SECRET=change-me-to-random-string

# Security
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me
SESSION_SECRET=change-me

# Email Configuration (Brevo/SMTP)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password
SMTP_SECURE=false
SMTP_FROM="HRMS Support <support@example.com>"

# Auth
OTP_ENABLED=true
OTP_EXPIRATION=600
BCRYPT_ROUNDS=12

# Cloudinary Storage
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
